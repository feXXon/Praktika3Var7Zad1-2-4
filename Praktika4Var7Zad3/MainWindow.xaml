<Window x:Class="Praktika4Var7Zad3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Praktika4Var7Zad3"
        mc:Ignorable="d"
        Title="элементы треугольника" Height="350" Width="600" Background="LightBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="50"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="155"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="1 — катет, 2 — гипотенуза, 3 — высота, 4 — площадь " Margin="45,0,0,0" Grid.Column="1" />

        <Label Content="Выберите параметр 1-4:" Margin="5, 5, 5, 5" Grid.Row="1"/>
        <TextBox x:Name="txt1" Grid.Column="1" Margin="8" Grid.Row="1"/>
        <Label Content="Ответ:" Margin="5, 5, 5, 5" Grid.Row="2"/>
        <TextBox x:Name="txt2" Grid.Column="1" Margin="8" Grid.Row="2" Height="100"/>
        <Button Grid.Row="3" Content="Считать" Margin="32,10,24,10" Click="Button_Click" Grid.Column="1"/>

    </Grid>
</Window>
